@model List<Proveedor>
<h1>Lista de Proveedores</h1>
<div>
    <a asp-controller="Proveedor" asp-action="Create" class="btn btn-primary">Nuevo</a>
    <a asp-controller="Proveedor" asp-action="GenerarReportePDF" class="btn btn-success">Generar PDF</a>
    <a asp-action="ReporteProductosExcel" class="btn btn-dark">Generar Excel</a> 

    <br />
    <br />

    <div class="card" style=" border: none;">
        <form asp-action="SubirExcelProductos" asp-controller="Proveedor" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="archivoExcel">Subir Excel</label>
                <input type="file" name="archivoExcel" required />
            </div>
            <br/>
            <button type="submit" class="btn btn-primary">Subir Archivo</button>
        </form>
    </div>

    <br />
    @if (Model != null)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Nombre</td>
                    <td>NRC</td>
                    <td>Direccion</td>
                    <td>Telefono</td>
                    <td>Email</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var proveedor in Model)
                {
                    <tr>
                        <th>@proveedor.Nombre</th>
                        <th>@proveedor.NRC</th>
                        <th>@proveedor.Direccion</th>
                        <th>@proveedor.Telefono</th>
                        <th>@proveedor.Email</th>
                        <th>
                            <a class="btn btn-primary" asp-contproveedorler="Proveedor" asp-action="Edit" asp-route-id="@proveedor.Id">Editar</a>|
                            <a class="btn btn-danger" asp-contproveedorle="Proveedor" asp-action="Delete" asp-route-id="@proveedor.Id">Eliminar</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
